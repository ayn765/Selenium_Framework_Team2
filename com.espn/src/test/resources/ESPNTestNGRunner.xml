<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="ESPN Test Suite">

    <test name="CR1">

        <parameter name="browserName" value="chrome"/>
        <parameter name="browserVersion" value="90"/>
        <parameter name="url" value="https://www.espn.com/soccer"/>

        <groups>
            <run>
                <include name="smoke"/>
                <exclude name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="soccer.ESPNSoccerPageTest"/>
        </classes>

    </test>

</suite>